<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/list_item_bg">
        <RelativeLayout
            android:id="@+id/app_item_top"
            android:layout_width="match_parent"
            android:layout_height="72dp">
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_default"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_toRightOf="@+id/item_icon"
                android:layout_alignTop="@+id/item_icon"
                android:layout_marginLeft="8dp">


            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有缘网"
                android:ellipsize="end"
                android:textColor="#ff333333"
                android:singleLine="true"
                android:textSize="16sp"
                />

            <RatingBar
                android:id="@+id/item_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_below="@+id/item_title"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:isIndicator="true"
                android:progressDrawable="@drawable/progress_ratingbar"/>
                <TextView
                    android:id="@+id/item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_ratingBar"
                    android:text="3.70MB"
                    android:textSize="12sp"
                    android:textColor="#ff7a7a7a"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <FrameLayout
                    android:id="@+id/action_progress"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_download" />
                <TextView
                    android:id="@+id/action_txt"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载"
                    android:layout_below="@+id/action_progress"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#ff7a7a7a"
                    android:textSize="12sp"/>
            </RelativeLayout>


        </RelativeLayout>
        <View
            android:id="@+id/item_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/app_item_top"
            android:background="@color/item_divider"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            ></View>
        <TextView
            android:id="@+id/item_des"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/item_divider"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="#ff717171"
            android:gravity="center_vertical"
            android:textSize="14dp"/>
    </RelativeLayout>
</FrameLayout>